:root{--background: white;--font: #444444;--secondary: #949494}@media (prefers-color-scheme: dark){:root{--background: #444444;--font: white;--secondary: #aaa}}body{background-color:var(--background);color:var(--font);font-family:-apple-system-body, -apple-system, system-ui, BlinkMacSystemFont, Helvetica, sans-serif}.content{margin:auto;max-width:480px;padding:20px}a{color:inherit;text-decoration:underline;text-decoration-color:var(--secondary);text-underline-offset:0.15em;text-underline-position:below}a:hover{background-color:var(--secondary);text-decoration:none}article img{max-width:240px}article p{line-height:1.5}blockquote{border-left:0.125em solid violet;margin-left:30px;padding:10px;padding-left:15px}blockquote a{color:inherit;text-decoration:none}#dated-li{padding-bottom:15px}footer{color:var(--secondary);text-align:justify}footer a{text-decoration:underline}h1{color:violet}.info{color:var(--secondary);font-style:italic}.info a{text-decoration-color:var(--font)}.info a:hover{background-color:var(--font)}#landing-main{padding-top:20px;padding-bottom:20px}li{line-height:1.5}nav a{text-decoration-color:violet}nav a:hover{background-color:violet}nav li{line-height:1.75}nav ul{list-style-type:none;padding:0}#recent-info span{display:inline-block}#site-footer{padding-left:40px;padding-top:20px}#taxonomy{padding-top:15px}#title{font-family:Georgia, serif;white-space:nowrap}#title a{text-decoration:none}#title a:hover{background-color:inherit}#title h1{display:inline}#title span{margin-right:20px}html #title{user-select:none}#writing-list{list-style-type:none;padding:0}#writing-list li{padding-bottom:15px}
